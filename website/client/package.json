{
  "name": "spacify-client",
  "description": "",
  "version": "1.0.0",
  "author": "Thomas 'Aquitano' Breindl (https://github.com/Aquitano)",
  "license": "GPL-3.0",
  "main": "index.html",
  "scripts": {
    "copy:html": "copyfiles -u 1 ./src/**/*.html public",
    "copy:css": "copyfiles -u 1 ./src/css/**.css public",
    "copy:js": "copyfiles -u 1 ./src/**/*.js public/js",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* public",
    "copy": "npm-run-all --parallel copy:*",
    "watch:html": "onchange \"src/**/*.html\" -i -- npm-run-all copy:html copy:css build:css reload",
    "watch:assets": "onchange \"src/assets/**/*\" -- npm-run-all copy:assets reload",
    "watch:css": "onchange \"src/css/*.css\" -- npm-run-all copy:css build:css reload",
    "watch:ts": "tsc",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:*",
    "postbuild": "npm-run-all build:* && uglifyjs-folder public/js -eo public/js --pattern \"**/*.js,!**/*min.js\"",
    "build:css": "postcss public/**/*.css -r --no-map",
    "reload": "npx browser-sync reload"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "browser-sync": "^3.0.2",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.14",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.0.0",
    "sass": "^1.56.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.3",
    "uglifyjs-folder": "^3.1.4"
  }
}
